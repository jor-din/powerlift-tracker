<%- include('../partials/html-head') %>
<%- include('../partials/nav') %>
<main>
    <h1><%= title %></h1>
    <a href="/profile/<%= user.profile._id %>">Back To Profile</a>
    <ul>
        <% routines.forEach(routine => { %>
            <%= routine.name %>
            <form 
                action="/routines/<%= routine._id %>?_method=Delete"
                class="delete-form"
                method="POST"
                ><button type="submit">X</button>
            </form>
            <form action="/routines/<%= routine._id %>/sets " method="POST">
                <input type="number" name="reps" placeholder="Reps" id="reps-input"> <input type="number" name="weight" placeholder="Weight" id="weight-input">
                <button type="submit">Add Set</button>
            </form>
            <% if (routine.sets.length) { %>
                <% routine.sets.forEach(set => { %>
                    <li><%= set.reps %> x <%= set.weight %></li>
                <% }) %>
            <% } %>
        <% }) %>
    </ul>
    <form id ="add-workout-form" action="/routines" method="POST">
        <input type="text" name="name" id="exercise-input" required>
        <button type="submit">Add Workout</button>
    </form>
    


</main>

<%- include('../partials/footer') %>